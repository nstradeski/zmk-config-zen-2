#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>

#define ZMK_POINTING_DEFAULT_MOVE_VAL 1500  // default: 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // default: 10

#include <dt-bindings/zmk/pointing.h>


/ {
    chosen {
        zmk,matrix_transform = &default_transform;

        //zmk,matrix_transform = &five_column_transform;
    };
};

/ {
    combos {
        compatible = "zmk,combos";

        sy_combo {
            bindings = <&kp Y>;
            key-positions = <39 22>;
            layers = <0>;
        };

        tp_combo {
            bindings = <&kp P>;
            key-positions = <39 21>;
            layers = <0>;
        };

        hl_combo {
            bindings = <&kp L>;
            key-positions = <39 20>;
            layers = <0>;
        };

        ed_combo {
            bindings = <&kp DOT>;
            key-positions = <39 19>;
            layers = <0>;
        };

        oq_combo {
            bindings = <&kp Q>;
            key-positions = <39 18>;
            layers = <0>;
        };

        fj_combo {
            bindings = <&kp J>;
            key-positions = <39 10>;
            layers = <0>;
        };

        dk_combo {
            bindings = <&kp K>;
            key-positions = <39 9>;
            layers = <0>;
        };

        nm_combo {
            bindings = <&kp M>;
            key-positions = <39 8>;
            layers = <0>;
        };

        iq_combo {
            bindings = <&kp SQT>;
            key-positions = <39 7>;
            layers = <0>;
        };

        gm_combo {
            bindings = <&kp MINUS>;
            key-positions = <39 6>;
            layers = <0>;
        };

        cx_combo {
            bindings = <&kp X>;
            key-positions = <39 34>;
            layers = <0>;
        };

        wb_combo {
            bindings = <&kp B>;
            key-positions = <39 33>;
            layers = <0>;
        };

        rv_combo {
            bindings = <&kp V>;
            key-positions = <39 32>;
            layers = <0>;
        };

        ac_combo {
            bindings = <&kp COMMA>;
            key-positions = <39 31>;
            layers = <0>;
        };

        uz_combo {
            bindings = <&kp Z>;
            key-positions = <39 30>;
            layers = <0>;
        };

        ten_combo {
            bindings = <&kp RET>;
            key-positions = <39 11>;
            layers = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        alpha_1 {
            label = "ALPHA I";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&none  &none  &none  &none  &none  &none    &kp G      &kp I  &kp N  &kp D  &kp F  &lt 5 ESCAPE
&none  &none  &none  &none  &none  &none    &kp O      &kp E  &kp H  &kp T  &kp S  &lt 4 BACKSPACE
&none  &none  &none  &none  &none  &none    &kp U      &kp A  &kp R  &kp W  &kp C  &kp RIGHT_SHIFT
                     &none  &none  &none    &kp SPACE  &mo 3  &mo 2
            >;
        };

        alpha_2 {
            bindings = <
&none  &none   &none  &none  &none  &none    &kp MINUS  &kp SQT     &kp M  &kp K  &kp J  &kp RET
&none  &trans  &none  &none  &none  &none    &kp Q      &kp PERIOD  &kp L  &kp P  &kp Y  &kp BACKSPACE
&none  &none   &none  &none  &none  &none    &kp Z      &kp COMMA   &kp V  &kp B  &kp X  &kp RIGHT_SHIFT
                      &none  &none  &none    &none      &none       &none
            >;

            label = "ALPHA II";
        };

        number {
            label = "NUMBER";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none  &none  &none  &none  &none  &none    &kp DOT    &kp NUMBER_9  &kp N8        &kp N7        &kp NUMBER_6  &kp EQUAL
&none  &none  &none  &none  &none  &none    &kp N5     &kp NUMBER_4  &kp NUMBER_3  &kp NUMBER_2  &kp NUMBER_1  &kp PLUS
&none  &none  &none  &none  &none  &none    &kp COMMA  &kp N0        &kp PERCENT   &kp DOLLAR    &kp HASH      &kp MINUS
                     &none  &none  &none    &none      &none         &none
            >;
        };

        symbol {
            label = "SYMBOL";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none  &none  &none  &none  &none  &none    &kp CARET     &kp AT           &kp LPAR               &kp LBRC       &kp LEFT_BRACKET   &kp TAB
&none  &none  &none  &none  &none  &none    &kp SLASH     &kp EXCLAMATION  &kp QUESTION           &kp SEMICOLON  &kp COLON          &kp BACKSLASH
&none  &none  &none  &none  &none  &none    &kp ASTERISK  &kp AMPERSAND    &kp RIGHT_PARENTHESIS  &kp RBRC       &kp RIGHT_BRACKET  &kp TILDE
                     &none  &none  &none    &none         &none            &none
            >;
        };

        navigation {
            bindings = <
&none  &none  &none  &none  &none  &none    &kp PAGE_UP    &kp HOME        &kp UP_ARROW  &kp END          &none  &none
&none  &none  &none  &none  &none  &none    &kp PAGE_DOWN  &kp LEFT_ARROW  &kp DOWN      &kp RIGHT_ARROW  &none  &trans
&none  &none  &none  &none  &none  &none    &none          &none           &none         &none            &none  &none
                     &none  &none  &none    &none          &none           &none
            >;

            label = "NAV";
        };

        mouse {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans     &trans          &mmv MOVE_UP    &trans           &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans     &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans     &trans          &trans          &trans           &trans  &trans
                        &trans  &trans  &trans    &mkp LCLK  &mkp MCLK       &mkp RCLK
            >;

            label = "MOUSE";
        };
    };
};
